<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lijiang.happydispatch.ui.activity.homePage.search.SearchActivity">

   <include
       android:id="@+id/search_include"
       layout="@layout/include_search_bar"/>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="17sp"
            android:textColor="@color/yellow"
            android:text="历史记录"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/delete_all"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/delete"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    </RelativeLayout>
    <com.example.lijiang.happydispatch.ui.diyView.FlowLayout
            android:layout_margin="10dp"
            android:padding="5dp"
            android:id="@+id/record_flowLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp">
    </com.example.lijiang.happydispatch.ui.diyView.FlowLayout>
    <TextView
        android:textSize="17sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/yellow"
        android:text="猜你喜欢"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <com.example.lijiang.happydispatch.ui.diyView.FlowLayout
        android:layout_margin="10dp"
        android:padding="5dp"
        android:id="@+id/like_flowLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp">
    </com.example.lijiang.happydispatch.ui.diyView.FlowLayout>
</LinearLayout>

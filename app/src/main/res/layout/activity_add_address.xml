<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lijiang.happydispatch.ui.activity.mine.person.AddAddressActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            app:elevation="0dp"
            android:background="@color/white"
            android:layout_height="?attr/actionBarSize">
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/back"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/back"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="新增收货地址"
                        android:textColor="@color/yellow"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <TextView
            android:paddingLeft="10dp"
            android:textColor="@color/blue"
            android:text="请输入收货人："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:theme="@style/myEditText"
            android:textCursorDrawable="@null"
            android:paddingLeft="10dp"
            android:text="fdsf"
            android:textColor="@color/yellow"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingLeft="10dp"
            android:textColor="@color/blue"
            android:text="请输入联系方式："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:theme="@style/myEditText"
            android:textCursorDrawable="@null"
            android:paddingLeft="10dp"
            android:text="fdsf"
            android:textColor="@color/yellow"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingLeft="10dp"
            android:textColor="@color/blue"
            android:text="请输入地址："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:theme="@style/myEditText"
            android:textCursorDrawable="@null"
            android:paddingLeft="10dp"
            android:text="fdsf"
            android:textColor="@color/yellow"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <com.example.lijiang.happydispatch.ui.diyView.SmoothCheckBox
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                app:trimColor="@color/gray"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:gravity="center"
                android:text="设置成默认地址"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
   <Button
       android:layout_alignParentBottom="true"
       android:background="@color/yellow"
       android:textColor="@color/white"
       android:text="保存"
       android:layout_width="match_parent"
       android:layout_height="40dp"/>
</RelativeLayout>

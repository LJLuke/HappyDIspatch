<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/com_image"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@color/blue"
            android:layout_toRightOf="@id/single_check_box"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/com_image"
            android:textColor="@color/gray"
            android:text="给你烤送给你了复古风格立法机关李开复的"
            android:layout_width="150dp"
            android:layout_height="80dp"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="100dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/price_layout"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/price_image"
                    android:layout_centerVertical="true"
                    android:src="@drawable/price"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:id="@+id/com_price"
                    android:textColor="@color/red"
                    android:layout_marginLeft="5dp"
                    android:text="39.0"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/price_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <TextView
                android:layout_below="@id/price_layout"
                android:text="x1"
                android:textColor="@color/gray"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:text="结算"
                android:textColor="@color/white"
                android:background="@drawable/shape_label"
                android:layout_width="50dp"
                android:layout_height="30dp"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>